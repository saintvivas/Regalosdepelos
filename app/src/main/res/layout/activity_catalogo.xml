<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Catalogo">

    <SearchView
        android:id="@+id/barraBusqueda"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/botonMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gridCatalogo"/>

    <Button
        android:id="@+id/botonMenu"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#2196F3"
        android:text="Menu"
        android:onClick="abrirMenu"/>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridCatalogo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/contenedorFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonMenu"
        app:layout_constraintVertical_bias="0.15"
        app:rowCount="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:foreground="?selectableItemBackground"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" >

            <Button
                android:id="@+id/botonTopper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1BFFFFFF"
                android:foreground="?selectableItemBackground"
                android:onClick="onClick"
                android:text="Toppers"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <Button
                android:id="@+id/botonMesa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1BFFFFFF"
                android:foreground="?selectableItemBackground"
                android:onClick="onClick"
                android:text="Mesas"
                android:textColor="#000000" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRepisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <Button
                android:id="@+id/botonRepisa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1BFFFFFF"
                android:foreground="?selectableItemBackground"
                android:onClick="onClick"
                android:text="Repisas"
                android:textColor="#000000" />

        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

    <FrameLayout
        android:id="@+id/contenedorFragment"
        android:layout_width="400dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/gridCatalogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>