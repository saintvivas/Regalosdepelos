<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#2196F3"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageBotonMenu"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:backgroundTint="#2196F3"
            app:srcCompat="@drawable/ic_menu" />

        <SearchView
            android:id="@+id/barraBusqueda"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:clipChildren="true" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imagenRegalo"
        android:layout_width="match_parent"
        android:layout_height= "400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPrincipal"
        app:srcCompat="@drawable/pngegg" />

    <TextView
        android:id="@+id/mensajeBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="AquÃ­ en la App de regalos de pelos  tienes todo a la mano"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenRegalo" />


</androidx.constraintlayout.widget.ConstraintLayout>
